#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/app/wx-fe/node_modules/.pnpm/@tarojs+cli@4.1.8_@types+node@22.19.3/node_modules/@tarojs/cli/bin/node_modules:/app/wx-fe/node_modules/.pnpm/@tarojs+cli@4.1.8_@types+node@22.19.3/node_modules/@tarojs/cli/node_modules:/app/wx-fe/node_modules/.pnpm/@tarojs+cli@4.1.8_@types+node@22.19.3/node_modules/@tarojs/node_modules:/app/wx-fe/node_modules/.pnpm/@tarojs+cli@4.1.8_@types+node@22.19.3/node_modules:/app/wx-fe/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/app/wx-fe/node_modules/.pnpm/@tarojs+cli@4.1.8_@types+node@22.19.3/node_modules/@tarojs/cli/bin/node_modules:/app/wx-fe/node_modules/.pnpm/@tarojs+cli@4.1.8_@types+node@22.19.3/node_modules/@tarojs/cli/node_modules:/app/wx-fe/node_modules/.pnpm/@tarojs+cli@4.1.8_@types+node@22.19.3/node_modules/@tarojs/node_modules:/app/wx-fe/node_modules/.pnpm/@tarojs+cli@4.1.8_@types+node@22.19.3/node_modules:/app/wx-fe/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@tarojs/cli/bin/taro" "$@"
else
  exec node  "$basedir/../@tarojs/cli/bin/taro" "$@"
fi
